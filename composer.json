{
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "composer/installers": "1.*",
        "johnpbloch/wordpress": ">=5.0",
        "wpackagist-theme/sydney":"~1.55",
        "wpackagist-plugin/page-scroll-to-id":"1.6.5",        
        "wpackagist-plugin/svg-support":"2.3.15",
        "wpackagist-plugin/child-theme-configurator":"2.4.4",
        "wpackagist-plugin/coming-soon":"5.0.25",
        "wpackagist-plugin/easy-newsletter-signups":"1.0.3",
        "wpackagist-plugin/sydney-toolbox":"1.03",
        "wpackagist-plugin/testimonial-slider":"1.3.0",
        "wpackagist-plugin/the-post-grid":"2.3",
        "wpackagist-plugin/ultimate-faqs":"1.8.23",
        "wp-cli/wp-cli-bundle": "*"
    },
    "extra": {
        "wordpress-install-dir": "public/wp",
        "installer-paths": {
            "public/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "public/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "public/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    }
}
